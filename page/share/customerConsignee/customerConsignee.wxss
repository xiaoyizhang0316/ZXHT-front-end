/**consignee.wxss**/
page{height: 0rpx;}

.container {
  width: 100%;
  font-size: 30rpx;
  background-color: #fff;
} 

.top-contaniner {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.top-input-box {
  width: 100%;
  border-bottom: 1px #e3e3e3 solid;
}

.top-input-box input{
  padding-left: 25rpx;
  height: 90rpx;
}

.middle-contaniner {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.middle-info {
  background-color: #f7f7f7;
  color: #ef3535;
  padding: 30rpx;
  font-size: 27rpx;
  border-bottom: 1px #e3e3e3 solid;
}

.middle-input-box {
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items:center;
  width: 100%;
  border-bottom: 1px #e3e3e3 solid;
}
.middle-input-box text {
  line-height: 100%;
  text-align: center;
  padding-left: 25rpx;
}
.middle-input-box input{
  padding-left: 25rpx;
  width: auto;
  height: 90rpx;
}

.middle-pic-box {
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1px #e3e3e3 solid;
}

.middle-pic {
  color: #888;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx; 
  margin-bottom: 30rpx;
  width: 280rpx;
  height: 220rpx;
  border: 1px #e3e3e3 solid;
}

.bottom-contaniner {
    width: 100%;
}

.saveBtn {
  color: #fff;
  font-size: 35rpx;
  width: 90%;
  margin-top: 27rpx;
  /* background-color: #33CCCC; */
  background-color: #09bb07;
}