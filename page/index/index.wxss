.bottom-window-stock {
    width: 94%;
    height: 400rpx;
    font-size: 40rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.stock-edit {
    display: flex;
}

.stock-edit text {
    padding: 0;
    width: 70rpx;
    height: 80rpx;
    line-height: 80rpx;
    border: 1px solid #e6e6e6;
    text-align: center;
    vertical-align: middle;
}

.stock-edit input {
    width: 90rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-top: 1px solid #e6e6e6;
    border-bottom: 1px solid #e6e6e6;
    text-align: center;
    vertical-align: middle;
    color: #888;
}

.bottom-window-btn {
    width: 100%;
    height: 70rpx;
    background-color: #c70039;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 10rpx;
    opacity: 0.8;
}

.bottom-window-btn2 {
    width: 100%;
    height: 70rpx;
    background-color: #a9a9a9;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 10rpx;
    opacity: 0.9;
}

.bottom-window-btn1 {
    width: 100%;
    height: 70rpx;
    background-color: snow;
    color: #696969;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-bottom: 10rpx;
    opacity: 0.9;
}

.bottom-window-btn text {
    font-size: 33rpx;
}

