@import '../common/common.wxss';
@import '/page/common/templates/goodsList/goodsList-block/goodsList-block.wxss';

swiper {
  height: 421.5rpx;
  z-index:-1;
}

swiper-item image {
  width: 100%;
  height: 100%;
  z-index:-1;
}

.search-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.head-img {
  justify-content: center;
  display: flex;
}

.head-img image {
  width: 80px;
  height: 80px;
  /* transform: rotate(-40deg); */
}

.search-input {
  width: 95%;
  margin: 0 auto;
  border-radius: 50px;
  border: 1px solid #e6e6e6;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  background-color: #d8bfd8;
  opacity:  0.9;
  background: linear-gradient(to bottom, #f8f8f8, whitesmoke);
  position: relative;
  bottom: -10px;
  z-index: 1;
}

.search-input input {
  font-size: 15px;
  height: 25px;
  line-height: 25px;
  /*display: inline-flex;*//* flex: 0 0 75%; *//* margin-left: 10px; */
  width: 95%;
  padding-left: 10rpx;
}

.search-input image {
  width: 28px;
  height: 28px;
  /*display: inline-flex;*/
}

.placeholderstyle {
  color: rgba(0, 0, 0, 0.6);
  font-size: 15px;
  font-weight: 400;
}

.select-title, .newest-title {
  width: 100%;
  padding: 10rpx 0;
  height: 10%;
  font-size:medium;
  text-align: center;
	color: #4d0000;
	letter-spacing: 0.5px;
	font-weight:700;
}

.select-top-small {
  width: 375rpx;
  height: 375rpx;
  float: left;
}

.select-bottom, .select-top {
  width: 100%;
  height: 375rpx;
}

.select-top-small image, .select-bottom image, .select-top-small navigator,
.select-bottom navigator {
  display: block;
  width: 100%;
  height: 100%;
}

.newest-box {
  padding: 0 40rpx;
  background-color: #f5f6f5;
}

.newest-box .newest-list {
  display: inline-block;
  width: 325rpx;
  height: 325rpx;
  margin: 10rpx 20rpx 10rpx 0;
  border-radius: 10px;
  text-align: center;
  background: white;
}

.newest-box .newest-list:nth-child(2n) {
  margin-right: 0;
}

.newest-box .newest-list image {
  width: 175rpx;
  height: 175rpx;
  margin: 20rpx 0 10rpx;
}

.newest-box .newest-list .newest-text {
  font-size: 32rpx;
}

.main-profile{
  margin: 5 auto;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  width: 100%;
  position: relative;
  background-color: rgba(
183,0,0,0.8);
  height:80rpx;
  z-index:0;
  
} 

.main-profile text{
  color:white;
}

.main-profile #name{
  font-size:90%;
}

.main-profile #sign{
  font-size:100%;
}

#profile {
  width:100rpx;
  height:100rpx;
  position:relative;
  border: 2rpx solid;
  border-color: rgba(183,0,0,0.2);
  border-radius:150rpx;
   margin-top:-20rpx;  
}

.rate{
  width: 100%;
  padding: 10rpx 0;
  height: 10%;
  font-size:small;
  text-align: center;
	color: #4d0000;
	letter-spacing: 0.5px;
	font-weight:400;
display:flex;
justify-content:center;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  scroll-behavior: unset;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #777;
}

.on {
  color: #A9A9A9;
  font-weight: bolder;
  border-bottom: 5rpx solid #A9A9A9;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow-y: auto;
}
