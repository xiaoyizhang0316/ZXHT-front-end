@import '../common/common.wxss';


.cart-box-header {
    display: flex;
    justify-content: space-between;
    border-bottom: 1rpx solid #e9e9e9;
    height: 85rpx;
    align-items: center;
}

.cart-box-header-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    padding-left: 20rpx;
}

.cart-box-header-icon text {
    padding-left: 20rpx;
}

.cart-box-header-clear {
    padding-right: 20rpx;
    color: #ef3535;
}
.cart-box{
    padding-bottom: 100rpx;
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 170rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}

.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width: 155rpx;
    height: 140rpx;
    margin-top: 10rpx;
    
}
.cart-list .cart-pro-name{
    display: inline-block;
    /* width: 300rpx; */
    height: 105rpx;
    line-height: 50rpx;
    overflow: hidden;
      padding-top:10px;
  color:#696969;
  font-size: 25rpx;
}
.cart-list .cart-pro-price{
    position: absolute;
    bottom: 30rpx;
    left: 285rpx;
    line-height: 50rpx;
    color: #ef3535;
    font-size: 28rpx;
}
.cart-list .cart-count-box{
    position: absolute;
    left: 430rpx;
    bottom: 20rpx;
    /* width: 250rpx; */
    height: 60rpx;
    color: #ababab;
    padding-left: 50rpx;

}
.cart-list .cart-count-box text{
    display: inline-block;
    font-size: 25rpx;
    align-items: center;
}
.cart-count-down,.cart-count-add{
    border: 1rpx solid #e9e9e9;
    font-size: 35rpx;
    width: 65rpx;
    line-height: 70rpx;
    height: 100%;
    text-align: center;
}
.cart-count-num{
    line-height: 70rpx;
    text-align: center;
    font-size: 35rpx;
    border-top: 1rpx solid #e9e9e9;
    border-bottom:1rpx solid #e9e9e9;
    height: 100%;
    width: 75rpx;
}
.cart-del{
    position: absolute;
    right: 20rpx;
    bottom: 10rpx;
    width: 60rpx; 
    /* height: 60rpx;  */

    text-align: center;
    font-size: 44rpx;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    /* padding:0 20rpx 0 80rpx; */
    box-sizing: border-box;
    background: #AB956D;
    color: #fff;
}

.cart-toatl-price-box{
    width: 100%;
    padding-left: 20rpx; 
}

