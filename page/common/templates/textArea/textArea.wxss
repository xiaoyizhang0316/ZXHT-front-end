
page {
  background-color: #f8f8f8;
}
.search-textarea {
  width: 95%;
  margin: 0 auto;
  border-radius: 3px;
  border: 1px solid #4fbdfa;
  display: flex;
  flex-direction: row;
  height: 320rpx;
}

.search-textarea textarea {
	width:100%;
	height:100%;
}

.bottom-view {
  border:0px solid #ef6282;
  border-radius: 8rpx;
  flex-direction: column;
  background-color:#f8f8f8;
  padding-top: 10px;
  display: flex;
  flex:1;
  font-size: 15px;
  align-self:center;
  width:99%;
}

.button {
  height:33px;
  font-size:0.9em;
  margin:10px;
  justify-content: center;
}
