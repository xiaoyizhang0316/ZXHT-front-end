/***** goodsList-block start*****/
.goods-contaniner {
 
  width: 100%;
  border-top: 1px #e3e3e3 solid; 
  display: flex;
  /* justify-content: center; */
  /* align-items: center; */
  padding-top: 20rpx;
  flex-flow: row wrap;
  align-content: flex-start;
}

.goods-item {
   height: 500rpx; 
  width: 92%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  flex: 0 0 50%;
 
}

.goods-image{
  height: 300rpx;
  width: 300rpx;
}

.goods-desc {
  padding-top:7px;
  width:100%;
  display: flex;
  flex-direction: column;
  justify-content:space-between;
}

.goods-name{
  padding-top: 12rpx;
  /* height: 78rpx; */
  padding-left: 20rpx;
  padding-right: 12rpx;
}
.goods-name text{
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
  font-size: 24rpx;
  max-width: 320rpx;
  color: #696969;
  padding-left: 5rpx;
}
.goods-price {
  width: 82%;
  font-size: 22rpx;
  padding-left: 22rpx;
  padding-right: 20rpx;
  display:flex;
  flex-direction: row;
   justify-content:space-between;
}

.goods-price-strong {
  font-weight: 600; 
  align-self:center;
  color: #8B0000;
  padding-left: 5rpx;
}



.goods-sales-strong {
  font-weight: 300; 
  align-self:center;
	font-size: 20rpx;
  padding: 10rpx;
	margin-top:8rpx;
  
 
}
.goods-price-deleted {
  font-size: 28rpx;
   text-decoration:line-through; 
  color: #888;
  padding-left: 6rpx;
}

.goods-purchase-btn {
  width: 190rpx;
  display: flex;
}

.purchase-btn {
  font-size: 26rpx;
  background-color: #ac966a;
  color: white;
  border-radius:50px;
  padding: 0 20px 0 20px;
}