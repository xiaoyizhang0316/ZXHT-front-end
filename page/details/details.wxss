/*** goods spec start ***/
.goods-spec-content {
  font-size: 28rpx;
  padding: 10px;
}

.goods-spec-content text{
  line-height: 26px;
  min-height: 56rpx;
  /* border: 1rpx solid #ddd; */
}

.goods-spec-content view {
   border: 1rpx solid #ddd; 
   border-top: none; 
}

.goods-spec-content view:nth-child(1) {
   border-top: 1rpx solid #ddd; 
}

.goods-spec-entitle {
  word-break: break-all;
}

.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.flex-column{
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  /* align-items: stretch; */
}

.flex-cell{
  flex: 1
}

.flex-content {
  color: grey;
  padding: 10rpx;
  flex-basis: 55%;
  border-left: 1rpx solid #ddd;
}
