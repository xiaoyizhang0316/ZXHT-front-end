@import '../common/common.wxss';

.goods-box{
    position: relative;
    padding: 30rpx 40rpx 20rpx 40rpx;
    text-align: center;
    color: #454552;
    border-bottom: 30rpx solid #ededed;
}
.goods-box .goods-thumb{
    width: 300rpx;
    height: 300rpx;
    /* margin: 25rpx 0 25rpx; */
}

.to-carts-icon{
    position: absolute;
    right: 70rpx;
    top: 70rpx;
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    opacity: .6;
    -webkit-animation: to_cart .3s ease-out;
    animation: to_cart .3s ease-out;
}
@-webkit-keyframes to_cart {
    0%{
        right:100rpx;
        top:530rpx;
        -webkit-transform: scale(4);
    }
    /*60%{
        top: 20rpx;
    }*/
}
@keyframes to_cart {
    0%{
        right:100rpx;
        top:530rpx;
        transform: scale(4);
    }
    /*60%{
        top: 20rpx;
    }*/
}
.carts-icon{
    position: absolute;
    right: 40rpx;
    top: 40rpx;
    width: 75rpx;
    height: 75rpx;
}
.carts-icon image{
    width: 100%;
    height: 100%;
}
.carts-icon.on{
    -webkit-animation: to_cart_scale .3s ease;
    animation: to_cart_scale .3s ease;
}
@-webkit-keyframes to_cart_scale {
    50%{
        -webkit-transform: scale(1.2);
    }
}
@keyframes to_cart_scale {
    50%{
        transform: scale(1.2);
    }
}
.carts-icon-num{
    position: absolute;
    left: -15rpx;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    border-radius: 50%;
    background: #C70039;
    color: #fff;
    font-size: 24rpx;
}
.goods-box .goods-operation{
    position: relative;
    width: 70%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 50rpx;
    margin-bottom: 40rpx;
    box-sizing: border-box;
    border-radius: 50rpx;
    background: #C70039;
    color: #fff;
    font-size: 28rpx;
    opacity: 0.85;
    margin: 0 auto;
    flex-direction: row;
    display: flex;
    justify-content: space-between;
}


.goods-operation text{
    display: inline-block;
    height: 100rpx;
}
.goods-operation-num{
    width: 160rpx;
}
.goods-operation-add{
    width: 80rpx;
    margin-right: 30rpx;
}
.goods-des{

  flex-direction: row;
  display: flex;
  align-items: center;
}

.goods-to-cart{
    width: 210rpx;
    padding-right: 75rpx;
}
.goods-cart-img{
  
    right: 50rpx;
    top: 18rpx;
    width: 65rpx;
    height: 65rpx;
    margin-top: 15rpx;
}

.goods-stock{
    font-size: 20rpx;
    margin-bottom: 20rpx;
}
.goods-title{
    font-size: 28rpx;
    margin-bottom: 30rpx;
}
.goods-price{
    font-size: 38rpx;
}
.goods-tab-nav{
    display: inline-block;
    width: 33.33%;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1rpx solid #ededed;
    box-sizing: border-box;
    text-align: center;
    color: #c7c7cb;
}
.goods-tab-nav.on{
    color: #696969;
    border-bottom: 5rpx solid #A9A9A9;
}

/*** goods detail start ***/
.goods-content {
    /* padding: 5rpx;  */
}

.goods-detail-content{
  background-color:#ededed;
}

.goods-item-line {
  background-color:white;
  margin-bottom: 14rpx;
  padding: 12px;
}

.goods-item-desc {
  padding: 16px;
}

.goods-item-desc-text {
  white-space:pre-line; 
  padding-left: 16px;
}

.goods-item-text {
  display: flex;
  align-items: center;
  font-size:13px;
  color:grey;
  line-height:16px;
