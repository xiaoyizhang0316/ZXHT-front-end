@import '../../common/common.wxss';
page {
  background-color: #eff3f4;
}

.header{
    position: relative;
    height: 160rpx;
    width:100%;
    line-height: 100rpx;
    text-align: center;
    padding:30rpx 30rpx 30rpx;
    box-sizing: border-box; 
    background: linear-gradient(to top right, #AB956D, #D4AF37); 
    font-size: 28rpx;
    color: #fff;
    border-radius: 5px;
}
.header .thumb{
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.header .about{
    float: right;
}
.header .shoptitle{
  font-size: 40rpx;
}

.explain-line {
  width: 100%;
  height: 85rpx;
  /* line-height: 30px; */
  background-color: white;
  position: relative;
  display: flex;
  align-items: center;
  margin-top: 3rpx;
  font-size: 28rpx;
  color: #696969;
}

.explain-block {
  width: 5px;
  display: flex;
  margin-left: 10px;
  flex:1;
}

.explain-text {
  display: flex;
  flex:9;
  justify-content:flex-start;
  align-items:center;
}

.bottom-contaniner {
  align-self: flex-start;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 68%;
}

.confirmBtn {
  width: 90%;
  margin-top: 27rpx;
}
