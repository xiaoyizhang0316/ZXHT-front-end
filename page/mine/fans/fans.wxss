/* page/mine/fans/fans */

page {
  height: 100%;
}

.container {
  background-color: #fafafa;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}


.search-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}


.search-input {
  width: 95%;
  margin: 0 auto;
  border-radius: 50px;
  border: 1px solid #e6e6e6;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  background-color:#f8f8f8;
  opacity: 0.5;
   background: linear-gradient(to bottom, #f8f8f8, whitesmoke); 
    z-index: 1;
}

.search-input input {
  font-size: 15px;
  height: 25px;
  line-height: 25px;
  /*display: inline-flex;*/
  /* flex: 0 0 75%; */
  /* margin-left: 10px; */
  width:95%;
}

.search-input image {
  width: 28px;
  height: 28px;
  /*display: inline-flex;*/
}

.placeholderstyle {
  color: rgba(0, 0, 0, 0.6);
  font-size: 15px;
  font-weight: 400;
}

.button{
  background-color: #09bb07;
  width:100%;
  color:#fafafa;
}

.top-containerbar {
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #e3e3e3 ;
  position: inherit;
  background-color: #fff;
  display: flex;
  align-items: center;
  color: #000;
  font-size: 30rpx;
}

.fans-line-list-top{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx;
}

.fans-image-clo{
  flex:1;
  font-size: 35rpx;
}

.fans-name-clo{
  flex:2;
  font-size: 35rpx;
}

.fans-viplevel-clo{
  flex:3.2;
  font-size: 35rpx;
}

.fans-access-clo{
  flex:1;
  font-size: 35rpx;
}

