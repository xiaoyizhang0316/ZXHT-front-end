/* page/mine/fans/fans */

page {
  height: 100%;
}

.container {
  background-color: #fafafa;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
}


.search-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}


.search-input {
  width: 95%;
  margin: 0 auto;
  border-radius: 50px;
  border: 1px solid #e6e6e6;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  background-color:#f8f8f8;
  opacity: 0.5;
   background: linear-gradient(to bottom, #f8f8f8, whitesmoke); 
    z-index: 1;
}

.search-input input {
  font-size: 15px;
  height: 25px;
  line-height: 25px;
  /*display: inline-flex;*/
  /* flex: 0 0 75%; */
  /* margin-left: 10px; */
  width:95%;
}

.search-input image {
  width: 28px;
  height: 28px;
  /*display: inline-flex;*/
}

.placeholderstyle {
  color: rgba(0, 0, 0, 0.6);
  font-size: 15px;
  font-weight: 400;
}

.button{
  background-color: #09bb07;
  width:100%;
  color:#fafafa;
}

.top-containerbar {
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #e3e3e3 ;
  position: inherit;
  background-color: #fff;
  display: flex;
  align-items: center;
  color: #000;
  font-size: 40rpx;
}


.fan-item {
  height: 100rpx;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  background-color: #fff;
  border-bottom: 1px #e3e3e3 solid;
  width: 100%;
  /* border-radius: 5px; */
}

.fan-image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 24rpx;
  margin-left: 20rpx;
}

.fan-item-desc {
  display: flex;
  flex-direction: column;
}

.fan-item-name {
  color: #000;
  font-size: 40rpx;
}


.invisible-brick {
  height: 88rpx;
}











