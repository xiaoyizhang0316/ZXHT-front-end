/**addressList.wxss**/

.container {
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  background-color: #fff;

}

.addressList-header {
  display: flex;
  height: 80rpx;
  align-items: center;
  padding-left: 40rpx;
  border-bottom: 1px #e3e3e3 solid;
  font-size: 26rpx;
  color: #888;
}

.addressList-contaniner {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}

.addressList-item {
  background-color: #fff;
  display: flex;
  flex-direction: row;
  border-bottom: 1px #e3e3e3 solid;
}

.addressList-item :hover{
  background-color: #f7f7f7 !important;
}

.addressList-item-left {
  padding-left: 40rpx;
  width:80%;
}

.addressList-item-left view:nth-child(1) {
  padding-top: 20rpx;
}

.addressList-item-name {
  padding-right: 20rpx;
}


.addressList-item-left view:nth-child(2) {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #888;
}

.addressList-item-default {
  color: #ef3535;
}


.addressList-item-right {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ef3535;
  flex-grow:2;
}

.addressList-item-right text{
  
}


.addressList-bottom-blank {
  width: 100%;
  height:100rpx;
}
.bottom-contaniner {
  height:90rpx;
  width: 100%;
  z-index: 999;
  font-size: 40rpx;
  position:fixed;
  bottom: 0px;
  display: flex;
  opacity: 0.9;
}

.addAddressBtn {
  width:100%;
  height: 100%;
  border-radius: 0px;
  background-color: #9F000F;
   opacity: 0.7;
  color: white;
}