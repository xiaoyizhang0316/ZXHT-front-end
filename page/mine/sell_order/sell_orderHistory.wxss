page {
  background-color: #eff1f3;
}

.container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  position: fixed;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  scroll-behavior: unset;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #777;
}

.on {
  color: #A9A9A9;
  font-weight: bolder;
  border-bottom: 5rpx solid #A9A9A9;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow-y: auto;
}

.search {
  flex-direction: row;
  justify-content: space-between;
  flex: 1;
  display: flex;
  margin-bottom: 10px;
  padding-top: 10px;
}

.search-input {
  margin-left: 10px;
  margin-right: 5px;
  border-radius: 50px;
  border: 1px solid #cdcdcd;
  display: flex;
  justify-content: flex-start;
  /* align-items: center; */
  flex-direction: row;
  flex: 3;
  /* background-color:#e6e6e6; */
  opacity: 0.5;
  /* background: linear-gradient(to bottom, #bfbfbf, #f8f8f8);  */
}

.search-input input {
  font-size: 15px;
  height: 25px;
  line-height: 25px;
  /*display: inline-flex;*/
  flex: 1;
  /* margin-left: 10px; */
}

.order-list {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}

.placeholderstyle {
  color: rgba(0, 0, 0, 0.6);
  font-size: 16px;
  font-weight: 400;
}

.explain-line {
  width: 100%;
  background-color: white;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
  flex-direction: column;
  padding-top: 6px;
  margin-top: 10px;
}

.item-top {
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: white;
}

.item-line {
  width: 95%;
  display: flex;
  /* margin-bottom: 10px; *//* border-bottom: 1px solid #e6e6e6; *//* padding-bottom: 3px; */
  padding-left: 5px;
}

.hidden {
  display: none;
}

.order-item-scroll {
  height: 220rpx;
  font-size: 28rpx;
  color: #515151;
  /* line-height:20px; */
  background-color: #f8f8f8;
  white-space: nowrap;
}

.order-item-scroll-box {
  margin-top: 30rpx;
  height: 160rpx;
  width: 160rpx;
  margin-left: 20rpx;
  display: inline-block;
  border: 1px solid #e6e6e6;
  border-radius: 10px;
}

.order-item-scroll-box image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.order-item-title {
  position: absolute;
  top: 30rpx;
  display: inline-block;
  width: 500rpx;
  height: 160rpx;
}

.order-item-title-box {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.order-item-title text {
  width: 88%;
  font-size: 25rpx;
  line-height: 39rpx;
  white-space: pre-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.order-item-desc {
  width: 100%;
  height: 70rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 40rpx;
}

.order-item-desc .middle-tip {
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.order-item-desc .order-price {
  font-weight: 600;
}

.order-send {
