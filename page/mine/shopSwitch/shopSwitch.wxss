/* page/mine/shopSwitch/shopSwitch.wxss */
page{height: 100%}

.container {
  background-color: #fafafa;
  display: flex;
  justify-content: flex-start;
  align-items: center; 
}

.top-bar {
  display: flex;
  /* justify-content: center; */
  align-items: center;  
  background-color: #fafafa;
  width: 100%;
  height: 68rpx;
  padding-left: 28rpx;
  font-size: 28rpx;
  border-bottom: 1px #e3e3e3 solid;
}

.top-bar .shop-num {
  padding-left: 4rpx;
  padding-right: 4rpx;
  color: #ef3535;
}
.shop-list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; 
  width: 100%; 
}

.shop-radio-group {
  width: 100%; 
}

.shop-item {
  /* padding-top: 20rpx; */
  height: 200rpx;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  background-color: #fff;
  border-bottom: 1px #e3e3e3 solid;
  width: 100%; 
  /* border-radius: 5px; */
}

.shop-item-radio {
  padding-left: 24rpx; 
}

.shop-item-image {
  width: 130rpx;
  height: 130rpx;
  border-radius:50%;
  margin-right: 24rpx;
}

.shop-item-desc {
  display: flex;
  flex-direction: column;
}

.shop-item-desc view:nth-child(1){
  width: 460rpx;
  font-size: 30rpx;
  overflow: hidden; 
  white-space: nowrap; 
  text-overflow:ellipsis;
  padding-bottom: 10rpx;
}

.shop-item-desc view:nth-child(2){
  width: 460rpx;
  font-size: 24rpx;
  color: #888;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  line-height: 36rpx;
}

.invisible-brick {
  height: 88rpx;
}
.bottom-bar {
  border-top: 1px #e3e3e3 solid;
  width: 100%;
  position: fixed;
  bottom: 0px;
  height: 88rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.bottom-bar-desc {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
}

.bottom-bar button{
  margin: 0;
  margin-right: 36rpx;
}

.selected-shop-name {
  width: 280rpx;
  overflow: hidden; 
  white-space: nowrap; 
  text-overflow:ellipsis;
}

.selected-shop-name-none {
  color: #888;
  font-size: 30rpx;
}

.shop-icon {
   padding: 15rpx;
   height:  22px;
   width: 22px;
}