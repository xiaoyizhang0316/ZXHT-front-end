/* page/mine/shopApply/shopApply.wxss */
page {
  background-color: #fff;
}
.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
   align-items: center; 
}

.apply-container{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.apply-title {
  width: 95%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.apply-tip {
  height: 90rpx;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  border-top: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
  padding-left: 20rpx;
}

.apply-desc {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.apply-desc text {
  width: 95%;
  margin-bottom: 18rpx;
}
.apply-desc text:nth-child(1) {
  margin-top: 16rpx;
}

.apply-btn button {
  width: 95%;
  font-size: 24rpx;
}


/***** 弹窗start *****/
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 66rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;

  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.code-input {
  margin-top: 20rpx;
}
.code-input input {
  width: 100%;
}
.code-input button{
  font-size: 22rpx;
  width: 300rpx;
  text-align: center;
  vertical-align: middle;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
/***** 弹窗end *****/