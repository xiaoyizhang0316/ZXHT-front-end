.search-input {
  margin-left: 10px;
  margin-right: 5px;
  border-radius: 50px;
  border: 1px solid #cdcdcd;
  display: flex;
  justify-content: flex-start;
  /* align-items: center; */
  flex-direction: row;
  flex: 3;
  /* background-color:#e6e6e6; */
  opacity: 0.5;
  /* background: linear-gradient(to bottom, #bfbfbf, #f8f8f8);  */
}

.search-input input {
  font-size: 15px;
  height: 25px;
  line-height: 25px;
  /*display: inline-flex;*/
  flex: 1;
  /* margin-left: 10px; */
}

.placeholderstyle {
  color: rgba(0, 0, 0, 0.6);
  font-size: 16px;
  font-weight: 400;
}

.explain-line {
  width: 100%;
  background-color: white;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #e6e6e6;
  border-bottom: 1px solid #e6e6e6;
  flex-direction: column;
  padding-top: 6px;
  margin-bottom: 10rpx;
}

.item-top {
  width: 100%;
  height: 30px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: white;
}

.item-line {
  width: 95%;
  display: flex;
  /* margin-bottom: 10px; *//* border-bottom: 1px solid #e6e6e6; *//* padding-bottom: 3px; */
  padding-left: 5px;
}

.hidden {
  display: none;
}

.order-item-scroll {
  height: 220rpx;
  font-size: 14px;
  color: #515151;
  /* line-height:20px; */
  background-color: white;
  white-space: nowrap;
}

.order-item-scroll-box {
  margin-top: 30rpx;
  height: 160rpx;
  width: 160rpx;
  margin-left: 20rpx;
  display: inline-block;
  border-radius: 10px;
}

.order-item-scroll-box image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

.order-item-title {
  position: absolute;
  top: 30rpx;
  display: inline-block;
  width: 500rpx;
  height: 160rpx;
}

.order-item-title-box {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.order-item-title text {
  width: 88%;
  font-size: 25rpx;
  line-height: 39rpx;
  white-space: pre-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.order-item-desc {
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 40rpx;
  flex-direction: row;
}

.order-item-desc .middle-tip {
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.order-item-desc .order-price {
  font-weight: 600;
}

.order-pay {
  display: flex;
  width: 100%;
  height: 50px;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #eff1f3;
  /* background-color:#f8f8f8; */
}

