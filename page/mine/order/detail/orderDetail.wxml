<view class="explain-line" style="border-top:1px solid #eff3f4;margin-bottom:50px;flex-direction: column">
  <view class="inner-explain-line">
    <view class="explain-text" style="flex:5">总计: ${{totalPrice}}
      <text style="font-size:13px;color:#a4a6a5;padding-left:2px;padding-top:8px;">(仅供参考)</text>
    </view>
    <view class="explain-value" style="flex:1">
      {{totalQuantity}}件
    </view>
    <view class="explain-value" style="flex:1">
      {{totalWeight}}kg
    </view>
  </view>


  <block wx:if = "{{orderConfirmed}}">
    <view class="inner-explain-line">
      <view class="explain-text" style="flex:5">折扣: ${{discount}}
        <text style="font-size:13px;color:#a4a6a5;padding-left:2px;padding-top:8px;">(仅供参考)</text>
      </view>
    </view>
    <view class="inner-explain-line">
      <view class="explain-text" style="flex:5">邮费: ${{postalFee}}
        <text style="font-size:13px;color:#a4a6a5;padding-left:2px;padding-top:8px;">(仅供参考)</text>
      </view>
    </view>
  </block>



  <view wx:if="{{!shared}}" class="footer">
    <view style="margin-left:10px;font-size:15px;" data-order="{{orderId}}" bindtap="cancelOrder">取消订单</view>
    <view style="margin-right:10px;display:flex;border:1px solid #e64949;background-color:#e64949;padding:7px;border-radius:3px;" data-logo="{{logo}}" bindtap="placeOrder">
      <text style="color:#fff;font-size:15px">再次下单</text>
    </view>
  </view>
</view>